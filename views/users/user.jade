extends ../layout

block content
  div(class="game-creation z-depth-1")
    h5 USER - #{user.email} 
    
    if error
      ul(class="error-list error")
        each msg in error
          li= msg
          
    p todo - list games - past and present
    
    form(action='/users/#{user.id}' method='POST' enctype='multipart/form-data')
      p
        input(type="text" name="firstname" required placeholder="First Name" value="#{user.firstname}")
      p
        input(type="text" name="lastname" required placeholder="Last Name" value="#{user.lastname}")
      p
        img(src="#{user.imageurl}" width="150" height="150")
      p
        label(for"image" class="file-upload-label") Image
        input(type="file" name="image" class="waves-effect waves-light btn")
      p 
        input(type="submit" value="Update User" class="waves-effect waves-light btn")
